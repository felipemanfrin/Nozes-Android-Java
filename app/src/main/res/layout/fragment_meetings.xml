<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF3641" >
    <!--Lista de reuniões-->
    <LinearLayout
        android:id="@+id/layContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layMeetings"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_section"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtMeetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meetings"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#BF3641" />

            <ListView
                android:id="@+id/lstMeetings"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--Layout de botões-->
        <LinearLayout
            android:id="@+id/layRegisterMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_section"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtRegisterMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Meeting"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#BF3641" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <!--Botão de adição-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnAddMeeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button"
                        android:src="@drawable/ic_alarm_add_black_24dp" />
                </LinearLayout>
                <!--Botão de edição-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnEditMeeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button"
                        android:src="@drawable/ic_edit_black_24dp" />
                </LinearLayout>
                <!--Botão de exclusão-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnRemoveMeeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button"
                        android:src="@drawable/ic_delete_black_24dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>